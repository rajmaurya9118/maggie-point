<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - Pahadi Maggie</title>
  <link rel="stylesheet" href="/css/admin.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <div class="admin-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="logo">Pahadi Maggie</div>
      <nav class="nav-links">
        <button data-section="dashboard" class="nav-btn active">Dashboard</button>
        <button data-section="orders" class="nav-btn">Orders</button>
        <button data-section="customers" class="nav-btn">Customers</button>
      </nav>
    </aside>

    <!-- Mobile header toggle -->
    <header class="mobile-header">
      <button class="hamburger" id="toggleSidebar">â˜°</button>
      <h1>Admin Panel</h1>
      <h1></h1>
    </header>

    <!-- Main content -->
    <main class="main-content">
      <!-- Dashboard -->
      <section id="dashboard" class="section active-section">
        <h2>Dashboard</h2>
        <div class="stats">
          <div class="card">
            <h3>Total Orders</h3>
            <p class="count" data-target="0">0</p>
          </div>
          <div class="card">
            <h3>Items Sold</h3>
            <p class="count" data-target="0">0</p>
          </div>
          <div class="card">
            <h3>Revenue</h3>
            <p class="count" data-target="0">0</p>
          </div>
          <div class="card">
            <h3>Pending Orders</h3>
            <p class="count" data-target="0">0</p>
          </div>
        </div>
      </section>

      <!-- Orders -->
      <section id="orders" class="section">
        <h2>Orders</h2>
        <div class="filters">
          <label>Filter:
            <select id="orderFilter">
              <option value="all">All</option>
              <option value="Pending">Pending</option>
              <option value="Delivered">Delivered</option>
            </select>
          </label>
        </div>
        <table class="orders-table">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Items</th>
              <th>Time</th>
              <th>Payment</th>
              <th>Status</th>
              <th>Update</th>
            </tr>
          </thead>
          <tbody id="ordersBody">
            <!-- Filled via JS -->
          </tbody>
        </table>
      </section>

      <!-- Customers -->
      <section id="customers" class="section">
        <h2>Customers</h2>
        <input type="text" id="searchUser" placeholder="Search by name or number">
        <ul id="customerList">
          <!-- Filled via JS -->
        </ul>
      </section>
    </main>
  </div>

  <script src="/js/admin.js"></script>
</body>
</html>
